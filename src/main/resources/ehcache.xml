<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="ehcache.xsd"
        updateCheck="true"
        monitoring="autodetect"
        dynamicConfig="true">
    <diskStore path="D:/cache"/>
    <defaultCache
            maxElementsInMemory="3000"
            eternal="false"
            copyOnRead="true"
            copyOnWrite="true"
            timeToLiveSeconds="3600"
            timeToIdleSeconds="3600"
            overflowToDisk="true"
            diskPersistent="true"/>
    <cache name="top.immertry.simple.mapper.RoleMapper"
           maxElementsInMemory="3000"
           eternal="false"
           copyOnRead="true"
           copyOnWrite="true"
           timeToLiveSeconds="3600"
           timeToIdleSeconds="3600"
           overflowToDisk="true"
           diskPersistent="true"/>
</ehcache>